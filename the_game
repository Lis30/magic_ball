import random

print("Узнай свою судьбу с шаром судьбы")
next_qst = "д"
while next_qst == "д":
    print("Загадай вопрос с ответом 'да' или 'нет'")
    qst = input()
    a = random.randint(1, 20)
    answ = ["Бесспорно", "Предрешено", "Никаких сомнений", "Определённо да","Можешь быть уверен в этом", "Мне кажется - да", "Вероятнее всего", "Хорошие перспективы", "Знаки говорят - да", "Да", "Пока неясно, попробуй снова", "Спроси позже", "Лучше не рассказывать", "Сейчас нельзя предсказать", "Сконцентрируйся и спроси опять", "Даже не думай", "Мой ответ - нет", "По моим данным - нет", "Перспективы не очень хорошие", "Весьма сомнительно"]
    print(f"ответ шара: {answ[a]}")
    print("Спросить ещё? д/н?")
    next_qst = input()
print("Возвращайся если возникнут вопросы!")
